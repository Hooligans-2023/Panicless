<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Graduation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Collapsingtoolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#4E1313</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#4E1313</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#000000</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="main_text_medium">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="autoSizeMinTextSize">@dimen/text_size_11sp</item>
        <item name="autoSizeStepGranularity">@dimen/text_size_2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="main_text_regular">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="autoSizeMinTextSize">@dimen/text_size_11sp</item>
        <item name="autoSizeStepGranularity">@dimen/text_size_2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center</item>
    </style>




    <style name="main_text_bold">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="autoSizeStepGranularity">@dimen/text_size_2sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CircleImageTheme" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundImageTheme" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>

    <style name="SimpleRoundImageTheme" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">3%</item>
    </style>

</resources>